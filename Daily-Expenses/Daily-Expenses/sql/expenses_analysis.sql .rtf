-- Project: Daily Expenses Analysis
-- Purpose: Understand basic SQL aggregation and filtering
-- Tool Used: SQLite

-- View all expense records
SELECT * 
FROM expenses;

-- Calculate total money spent
SELECT SUM(amount) AS total_spent
FROM expenses;

-- Calculate total spending per category
SELECT category, SUM(amount) AS total
FROM expenses
GROUP BY category;

-- Find the highest single expense
SELECT MAX(amount) AS highest_expense
FROM expenses;
